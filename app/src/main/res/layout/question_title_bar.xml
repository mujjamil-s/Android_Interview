<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:id="@+id/questions_titlebar"
    android:background="@drawable/questiontitlebar">

    <Button
        android:id="@+id/bspeak"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/speak"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_questions_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:text="@string/catego_questions" />

    <Button
        android:id="@+id/bstop_mute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
         android:background="@drawable/stopmute"/>
</LinearLayout>